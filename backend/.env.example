# ProVision Backend Environment Variables
# Copy to .env for local development (fallback only)
# Production secrets managed via Infisical

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# RunPod GPU Server Configuration
RUNPOD_SSH_HOST=
RUNPOD_SSH_PORT=22
RUNPOD_SSH_USER=root
RUNPOD_SSH_PASSWORD=
RUNPOD_SSH_KEY=
RUNPOD_SSH_KEY_BASE64=

# Remote Server Paths
REMOTE_BASE_DIR=/workspace/provision/data
SAM2_MODEL_PATH=/workspace/checkpoints/sam2.1_hiera_large.pt
SAM2_CONFIG=configs/sam2.1/sam2.1_hiera_l.yaml
SAM3D_MODEL_PATH=/workspace/checkpoints/sam3d/
SAM2_WORKING_DIR=/workspace/codes/sam2
SAM3D_WORKING_DIR=/workspace/codes/sam3d
SAM2_CONDA_ENV=base
SAM3D_CONDA_ENV=sam3d

# Model Server Configuration
MODEL_SERVER_HOST=localhost
MODEL_SERVER_PORT=8765

# Infisical Configuration (for automatic secret loading)
INFISICAL_CLIENT_ID=
INFISICAL_CLIENT_SECRET=
INFISICAL_ENV=dev
